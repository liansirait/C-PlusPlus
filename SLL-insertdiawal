#include <iostream>
using namespace std;

// Struktur node
struct Node {
    int data;
    Node* next;
};

Node* head = NULL;

// Membuat node baru
Node* buatNode(int nilai) {
    Node* baru = new Node();
    baru->data = nilai;
    baru->next = NULL;
    return baru;
}

// Menampilkan isi linked list
void tampil() {
    Node* p = head;
    cout << "List: ";
    while (p != NULL) {
        cout << p->data << " -> ";
        p = p->next;
    }
    cout << "NULL\n";
}

// Insert di awal
void insertAwal(int nilai) {
    Node* baru = buatNode(nilai);
    baru->next = head;   // sambungkan ke head lama
    head = baru;         // geser head ke node baru
}

int main() {
    cout << "Praktikum 1: Insert di Awal\n";

    insertAwal(30);   // list: 30
    tampil();

    insertAwal(20);   // list: 20 -> 30
    tampil();

    insertAwal(10);   // list: 10 -> 20 -> 30
    tampil();

    return 0;
}
