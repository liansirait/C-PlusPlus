#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* prev;
    Node* next;
};

Node* head = NULL;
Node* tail = NULL;

Node* buatNode(int nilai) {
    Node* n = new Node();
    n->data = nilai;
    n->prev = NULL;
    n->next = NULL;
    return n;
}

void insertAkhir(int nilai) {
    Node* baru = buatNode(nilai);

    if (head == NULL) {
        head = tail = baru;
    } else {
        tail->next = baru;
        baru->prev = tail;
        tail = baru;
    }
}

void tampilMaju() {
    cout << "List : ";
    Node* p = head;
    while (p != NULL) {
        cout << p->data << " <-> ";
        p = p->next;
    }
    cout << "NULL\n";
}

// Insert setelah node dengan data == key
void insertSetelah(int key, int nilai) {
    Node* p = head;

    // cari node dengan nilai key
    while (p != NULL && p->data != key)
        p = p->next;

    if (p == NULL) {
        cout << "Data " << key << " tidak ditemukan\n";
        return;
    }

    Node* baru = buatNode(nilai);

    baru->next = p->next;
    baru->prev = p;

    if (p->next != NULL)        // kalau bukan di akhir
        p->next->prev = baru;

    p->next = baru;

    // jika disisipkan setelah tail lama
    if (p == tail)
        tail = baru;
}

int main() {
    cout << "Praktikum 2: Insert Setelah Nilai Tertentu (DLL)\n";

    // List awal: 10 <-> 20 <-> 30 <-> 40
    insertAkhir(10);
    insertAkhir(20);
    insertAkhir(30);
    insertAkhir(40);

    tampilMaju();

    cout << "\nInsert 25 setelah 20:\n";
    insertSetelah(20, 25);
    tampilMaju();

    cout << "\nInsert 45 setelah 40 (di akhir):\n";
    insertSetelah(40, 45);
    tampilMaju();

    return 0;
}
